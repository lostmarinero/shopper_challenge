.section.applicant-show.only-section
  .row-container.bg-green.col-xs-12.col-md-12
    .content-container.col-xs-12.col-md-5.col-md-offset-3
      .form-container
        <h1>Edit profile</h1>
        =simple_form_for @applicant,
          url: applicant_path,
          method: :put do |f|
          =f.error_notification
          =f.input :first_name
          =f.input :last_name
          =f.input :email
          =f.input :phone
          =f.input :phone_type, collection: Applicant::PHONE_TYPES
          =f.input :region, collection: Applicant::REGIONS
          =f.button :submit, 'Update Profile', class: 'btn btn-lg btn-block orange-btn'
