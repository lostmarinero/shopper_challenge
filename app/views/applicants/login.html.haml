.section.applicant-show.only-section
  .row-container.bg-green.col-xs-12.col-md-12
    .content-container.col-xs-12.col-md-5.col-md-offset-3
      .form-container
        <h1>Find Application By Email</h1>
        =simple_form_for @applicant,
          url: login_path,
          method: :post do |f|
          =f.error_notification
          =f.input :email
          =f.button :submit, 'Find Application', class: 'btn btn-lg btn-block orange-btn'
